# Auto detect text files and perform LF normalization
* text=auto

# Java sources
*.java text diff=java
*.gradle text diff=java
*.gradle.kts text diff=java

# Maven
pom.xml text diff=java
*.xml text

# Documentation
*.md text diff=markdown
*.txt text
*.adoc text

# Scripts
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Serialization
*.json text
*.yaml text
*.yml text
*.toml text

# Graphics
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Archives
*.jar binary
*.war binary
*.ear binary
*.zip binary
*.tar binary
*.gz binary

# Fonts
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
